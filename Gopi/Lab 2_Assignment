void setup() {
  pinMode(LED_BUILTIN, OUTPUT);
  Serial.begin(9600);
}

void loop() {
  if (Serial.available() > 0) {
    char receivedChar = Serial.read();

    switch (receivedChar) {
      case 'G':
      case 'g':
        digitalWrite(LED_BUILTIN, HIGH);
        Serial.println("LED ON");
        break;

      case 'N':
      case 'n':
        digitalWrite(LED_BUILTIN, LOW);
        Serial.println("LED OFF");
        break;
    }
  }
}
